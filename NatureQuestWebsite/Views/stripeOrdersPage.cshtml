@using NatureQuestWebsite.Models
@inherits Umbraco.Web.Mvc.UmbracoViewPage<StandardPageViewModel>
@{
    Layout = "siteMaster.cshtml";
    var currentModel = Model;

    @Html.Partial("/Views/Partials/PageContent/PageHeader.cshtml", Model)

    <div class="container padding-bottom-3x mb-2">
        <div class="row">
            @if (!string.IsNullOrWhiteSpace(currentModel.PageContentText))
            {
                @Html.Raw(currentModel.PageContentText)
            }
        </div>

        <div class="row">
            @Html.Action("GetAdminStripeOrderDetailsView", "Accounts")
        </div>
    </div>

}

@section footerScripts{
    @Html.Action("GetAdminOrderInvoiceDetails", "Accounts")
    
    <script>
        function printElement(elem) {
            //get the element to print
            var printAreaElement = document.getElementById(elem);

            if (printAreaElement) {
                //open a new window
                var newWindow = window.open();
                //add the element to the html
                $(newWindow.document.body).html(printAreaElement);
                //call the print method
                newWindow.print();
                //close the window
                newWindow.close();
            }
        }
    </script>
}