@using NatureQuestWebsite.Models
@inherits Umbraco.Web.Mvc.UmbracoViewPage<List<LinkItemModel>>
@{
    var stockistModels = Model;
    //check if we have items to display
    if (stockistModels.Any())
    {
        <section class="bg-faded padding-top-2x padding-bottom-2x">
            <div class="container">
                <h3 class="text-center mb-30 pb-2">
                    Our Stockist
                </h3>
                <div class="owl-carousel" data-owl-carousel="{ &quot;nav&quot;: false, &quot;dots&quot;: false, &quot;loop&quot;: true, &quot;autoplay&quot;: true, &quot;autoplayTimeout&quot;: 4000, &quot;responsive&quot;: {&quot;0&quot;:{&quot;items&quot;:2}, &quot;470&quot;:{&quot;items&quot;:3},&quot;630&quot;:{&quot;items&quot;:4},&quot;991&quot;:{&quot;items&quot;:5},&quot;1200&quot;:{&quot;items&quot;:6}} }">
                    @foreach (var stockist in stockistModels)
                    {
                        <a class="stockist-item" href="@stockist.LinkUrl" title="@stockist.LinkTitle">
                            <img class="d-block w-110 opacity-75 m-auto" src="@stockist.ThumbLinkImage" alt="@stockist.LinkTitle">
                        </a>
                    }
                </div>
            </div>
        </section>
    }
}

