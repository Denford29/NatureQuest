@using NatureQuestWebsite.Models
@inherits Umbraco.Web.Mvc.UmbracoViewPage<SiteShoppingCart>
@{
    var currentCart = Model;
    if (currentCart?.CheckoutPage != null)
    {
        //check if there are cart items
        if (currentCart.CartItems.Any())
        {
            <div class="row shopping-cart cart-list-header">
                <p class="col-md-5 text-lg text-medium">Product Details</p>
                <p class="col-md-1 text-center text-lg text-medium">Subtotal</p>
                <p class="col-md-1 text-center text-lg text-medium">Discount</p>
                <p class="col-md-1 text-center text-lg text-medium">Quantity</p>
                <p class="col-md-2 text-center text-lg text-medium">Update</p>
                <div class="col-md-2 text-right text-lg text-medium">
                    @using (Html.BeginUmbracoForm("ClearShoppingCart", "Shop",
                        FormMethod.Post,
                        new { role = "form", id = "clearCartForm" }))
                    {
                        <button class="btn btn-sm btn-outline-danger" id="ClearChoppingCart">
                            Clear Cart
                        </button>
                    }
                </div>
            </div>
            foreach (var cartItem in currentCart.CartItems)
            {
                var cartItemPage = cartItem.ProductLinePage;
                var cartProduct = cartItem.MainProductPage;
                var cartItemName = $"{cartProduct.Name} - {cartItemPage.Name}";
                var itemTotal = cartItem.Quantity * cartItem.Price;
                <div class="row shopping-cart cart-item">
                    <div class="product-item col-md-5">
                        <a class="product-thumb" title="@cartItemName" href="@cartProduct.Url">
                            <img src="@cartItem.CartItemImage" alt="@cartItemName">
                        </a>
                        <div class="product-info">
                            <h4 class="product-title">
                                <a title="@cartItemName" href="@cartProduct.Url">
                                    @cartProduct.Name
                                </a>
                            </h4>
                            <span>
                                <em>@cartItem.Description</em>
                            </span>
                        </div>
                    </div>

                    <div class="col-md-1 text-center text-lg text-medium">
                        @itemTotal.ToString("c")
                    </div>

                    <div class="col-md-1 text-center text-lg text-medium">
                        @cartItem.PriceDiscount.ToString("c")
                    </div>

                    <div class="col-md-3">
                        @using (Html.BeginUmbracoForm("UpdateCartItemProduct", "Shop",
                                FormMethod.Post,
                                new { role = "form", id = "updateCartProductForm", @class = "cart-form" }))
                        {
                            @Html.AntiForgeryToken()
                            <input id="cartItemPageId" name="cartItemPageId" type="hidden" value="@cartItem.ProductLinePage.Id">
                            <div class="row">
                                <div class="col-md-4 text-center">
                                    <input class="form-control" id="cartItemQuantity" name="cartItemQuantity" type="text" value="@cartItem.Quantity">
                                    @Html.ValidationMessageFor(model => cartItem.Quantity, "", new { @class = "help-block text-danger" })
                                </div>

                                <div class="col-md-8 text-center">
                                    <button class="btn btn-primary updateCartBtn btn-sm">
                                        <i class="icon-bag"></i> Update
                                    </button>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="col-md-2 text-right">
                        @using (Html.BeginUmbracoForm("RemoveCartItemProduct", "Shop",
                            FormMethod.Post,
                            new { role = "form", id = "removeCartProductForm", @class = "cart-form" }))
                        {
                            @Html.AntiForgeryToken()
                            <input id="cartItemPageId" name="cartItemPageId" type="hidden" value="@cartItem.CartItemPageId">
                            <button class="btn btn-sm btn-outline-danger removeCartProduct">
                                <i class="icon-cross"></i> Remove
                            </button>
                        }
                    </div>
                </div>
            }

            <div class="shopping-cart-footer">
                <div class="column">
                    @*<form class="coupon-form" method="post">
                            <input class="form-control form-control-sm" type="text" placeholder="Coupon code" required>
                            <button class="btn btn-outline-primary btn-sm" type="submit">Apply Coupon</button>
                        </form>*@
                </div>
                <div class="column text-lg">
                    Subtotal:
                    <span class="text-medium">
                        @currentCart.ComputeTotalValue().ToString("c")
                    </span>
                </div>
            </div>
            <div class="shopping-cart-footer">
                <div class="column">
                    @if (currentCart.ProductsPage?.Id > 0)
                    {
                        <a class="btn btn-outline-secondary" href="@currentCart.ProductsPage.Url" title="@currentCart.ProductsPage.Name">
                            <i class="icon-arrow-left"></i>&nbsp;Back to Shopping
                        </a>
                    }

                </div>
                <div class="column">
                    <a class="btn btn-success" id="checkoutSubmitButton" href="@currentCart.CheckoutPage.Url" title="@currentCart.CheckoutPage.Name">
                        Checkout
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="row shopping-cart">
                <p class="text-center text-lg text-medium">
                    Your shopping cart is currently empty.
                </p>
            </div>
        }
    }
}
